{
  "name": "@popc/api",
  "version": "0.1.0",
  "description": "PoPC Verification API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "node --import tsx --test test/*.test.ts",
    "test:watch": "node --import tsx --test --watch test/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "psql \"$DATABASE_URL\" -v ON_ERROR_STOP=1 -f db/schema.sql",
    "db:migrate:keys": "psql \"$DATABASE_URL\" -v ON_ERROR_STOP=1 -f db/migrations/001_add_api_keys.sql",
    "db:seed": "psql \"$DATABASE_URL\" -v ON_ERROR_STOP=1 -f db/seed.sql",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "keys:create": "tsx src/cli/manage-keys.ts create",
    "keys:list": "tsx src/cli/manage-keys.ts list",
    "keys:revoke": "tsx src/cli/manage-keys.ts revoke",
    "keys:info": "tsx src/cli/manage-keys.ts info"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.1.0",
    "@fastify/static": "^6.12.0",
    "@peculiar/x509": "^1.9.6",
    "@popc/c2pa": "file:../../packages/c2pa",
    "@simplewebauthn/server": "^9.0.3",
    "archiver": "^7.0.1",
    "cbor": "^9.0.2",
    "dotenv": "^16.4.1",
    "exifr": "^7.1.3",
    "fastify": "^4.26.0",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
