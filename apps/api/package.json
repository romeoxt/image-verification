{
  "name": "@popc/api",
  "version": "0.1.0",
  "description": "PoPC Verification API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--import tsx' node --test test/*.test.ts",
    "test:watch": "NODE_OPTIONS='--import tsx' node --test --watch test/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "psql $DATABASE_URL -f db/schema.sql",
    "db:seed": "psql $DATABASE_URL -f db/seed.sql",
    "db:reset": "npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/multipart": "^8.1.0",
    "@peculiar/x509": "^1.9.6",
    "@popc/c2pa": "file:../../packages/c2pa",
    "@simplewebauthn/server": "^9.0.3",
    "cbor": "^9.0.2",
    "dotenv": "^16.4.1",
    "exifr": "^7.1.3",
    "fastify": "^4.26.0",
    "jpeg-js": "^0.4.4",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
