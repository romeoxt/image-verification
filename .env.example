# PoPC API Configuration

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://popc:popc_password@localhost:5432/popc

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=popc-assets

# API Keys (for authentication)
# In production, use a secrets manager like Doppler or 1Password
API_KEYS=dev_key_1,dev_key_2

# Verification
MAX_ASSET_SIZE_BYTES=104857600
MAX_CLOCK_SKEW_SECONDS=300
DEFAULT_POLICY=default

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
