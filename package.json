{
  "name": "popc-saas",
  "version": "0.1.0",
  "private": true,
  "description": "Proof of Physical Capture (PoPC) SaaS Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@popc/api",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "db:migrate": "psql $DATABASE_URL -f apps/api/db/schema.sql",
    "db:seed": "psql $DATABASE_URL -f apps/api/db/seed.sql",
    "db:reset": "npm run db:migrate && npm run db:seed"
  },
  "engines": {
    "node": ">=20"
  }
}
